{
  "model": {
    "provider": "openai",
    "temperature": 0.7,
    "max_tokens": 4000
  },
  "providers": {
    "openai": {
      "api_key": "xxx",
      "model_name": "kimi-k2-thinking",
      "api_base": "https://api.moonshot.cn/v1"
    },
    "anthropic": {
      "api_key": "xxx",
      "model_name": "claude-sonnet-4-5-20250929",
      "api_base": "https://api.anthropic.com/v1"
    }
  },
  "persistence": {
    "storage_type": "json",
    "base_dir": "~/.tiny-claude-code"
  },
  "logging": {
    "enabled": true,
    "log_dir": "~/.tiny-claude-code/logs",
    "queue_size": 1000,
    "batch_size": 100,
    "batch_timeout": 1.0,
    "masking": {
      "enabled": true,
      "truncate_large_output": true,
      "max_output_chars": 10000,
      "sensitive_fields": [
        "password",
        "api_key",
        "token",
        "secret",
        "apiKey",
        "accessToken",
        "privateKey",
        "credentials",
        "authorization"
      ]
    },
    "maintenance": {
      "enabled": true,
      "retention_days": 30,
      "max_size_mb": 1000,
      "compress_after_days": 7
    }
  },
  "mcp_servers": [],
  "max_turns": 20,
  "web_search": {
    "api_key": "",
    "search_engine_id": "",
    "provider": "duckduckgo",
    "max_results": 5,
    "timeout": 20
  }
}
